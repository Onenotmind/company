    "target": "es5",
    "module": "esnext",
    "strict": true,
    "types" : [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
